# MongoDB Configuration
# Default MongoDB port is 27017, change if your setup is different
MONGO_URI=mongodb://localhost:27017/villa_booking

# Server Configuration
PORT=9000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
PASSWORD_SECRET=villa-platform-32-byte-encryption-key-2024
ENCRYPTION_KEY=villa-booking-platform-secret-key-32

# Node Environment
NODE_ENV=development

# Frontend URL (change this to your actual domain in production)
FRONTEND_URL=http://localhost:5173

# Backend URL (used for webhooks and calendar sync)
BACKEND_URL=http://localhost:9000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Sync Configuration
SYNC_INTERVAL_QUICK=15
SYNC_INTERVAL_FULL=120

# Platform API Keys (Optional - for actual integrations)
AIRBNB_CLIENT_ID=your-airbnb-client-id
AIRBNB_CLIENT_SECRET=your-airbnb-secret
BOOKING_API_KEY=your-booking-com-api-key
VRBO_API_KEY=your-vrbo-api-key
